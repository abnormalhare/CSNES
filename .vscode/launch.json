    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Last Target",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/zig-out/bin/NES_Zig.exe",
            "args": [
                "roms/nestest.nes",
                "1"
            ],
        }
    ],
    "inputs": [
        {
            "id": "zigLastTarget",
            "type": "command",
            "command": "zig.build.getLastTargetOrPrompt"
        }
    ]
}